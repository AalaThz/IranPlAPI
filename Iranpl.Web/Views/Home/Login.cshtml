@model Iranpl.Domain.ViewModel.Login.LoginViewModel

<style>
    .divider:after,
    .divider:before {
        content: "";
        flex: 1;
        height: 1px;
        background: #eee;
    }

    .h-custom {
        height: calc(100% - 73px);
    }

    .h-custom {
        height: 100%;
    }
    /*media (max-width: 450px) {
        }*/
</style>


    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">

            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" asp-action="Login">

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0"> خوش آمدید </p>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="UserName"></label>
                        <input type="text" asp-for="UserName" class="form-control form-control-lg" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <label class="form-label" asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control form-control-lg" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <label class="form-check-label" for="form2Example3">
                                مرا به خاطر بسپار
                            </label>
                            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
                        </div>
                        <a href="#!" class="text-body">کلمه عبور را فراموش کردید؟</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            ورود
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            حساب کاربری ندارید؟ <a href="#!" class="link-danger">ایجاد</a>
                        </p>
                    </div>

                </form>
            </div>

            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://upload.wikimedia.org/wikipedia/commons/4/40/Logo_nahad-removebg-preview.png"
                     class="img-fluid" alt="Sample image">
            </div>

        </div>
    </div>
